doctype html
html
  head
    meta(charset='utf-8')
    meta(content='IE=edge,chrome=1', http-equiv='X-UA-Compatible')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    title Griffel
    link(href='//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.4/styles/arta.min.css', rel='stylesheet', type='text/css', media='screen')
    link(href='css/screen.css', rel='stylesheet', type='text/css', media='screen')
    link(href='css/print.css', rel='stylesheet', type='text/css', media='print')
  body.index
    a#nav-button(href='#')
      span
        | NAV
        img(src='images/navbar.png')
    .tocify-wrapper
      img(src='images/logo.png')
      .lang-selector
        a(href='#', data-language-name='shell') shell
      .search
        input#input-search.search(type='text', placeholder='Search')
      ul.search-results
      #toc
      ul.toc-footer
        li
          | Powered by 
          a(href='http://github.com/tripit/slate') Slate
          |  and 
          a(href='http://github.com/hnrc/griffel') Griffel
    .page-wrapper
      .dark-box
      .content !{content}
      .dark-box
  script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/1.11.2/jquery.min.js', type='text/javascript')
  script(src='//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.4/highlight.min.js', type='text/javascript')
  script(src='js/lib/emojify.js', type='text/javascript')
  script(src='js/lib/jquery_ui.js', type='text/javascript')
  script(src='js/lib/jquery.highlight.js', type='text/javascript')
  script(src='js/lib/jquery.tocify.js', type='text/javascript')
  script(src='js/lib/energize.js', type='text/javascript')
  script(src='js/lib/lunr.js', type='text/javascript')
  script(src='js/app/search.js', type='text/javascript')
  script(src='js/app/toc.js', type='text/javascript')
  script.
    hljs.configure({languages: []});
    hljs.initHighlightingOnLoad();
    emojify.setConfig({
       img_dir: 'images/emojify'
    });
    emojify.run();